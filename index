<script>
// Helper: safe number parse
function toNumber(v){
  const n = parseFloat(v);
  return Number.isFinite(n) ? n : 0;
}

function recalcularSubtotal(row){
  const priceTd = row.querySelector('td[data-price]');
  const price = priceTd ? toNumber(priceTd.dataset.price) : 0;
  const qtyInput = row.querySelector('.qty');
  const qty = qtyInput ? toNumber(qtyInput.value) : 0;
  const subtotal = price * qty;
  const cell = row.querySelector('.subtotal');
  if(cell) cell.textContent = subtotal.toLocaleString();
  return subtotal;
}

function sumarTotal(){
  let total = 0;
  document.querySelectorAll('tbody tr').forEach(row =>{
    total += recalcularSubtotal(row);
  });
  const totalEl = document.getElementById('total');
  if(totalEl) totalEl.textContent = total.toLocaleString();
  return total;
}

// Wire events
document.addEventListener('DOMContentLoaded', ()=>{
  // auto-update while typing
  document.querySelectorAll('.qty').forEach(input =>{
    input.addEventListener('input', () => {
      sumarTotal();
    });
  });

  // calc button (manual)
  const calcBtn = document.getElementById('calcBtn');
  if(calcBtn) calcBtn.addEventListener('click', sumarTotal);

  // clear button
  const clearBtn = document.getElementById('clearBtn');
  if(clearBtn) clearBtn.addEventListener('click', ()=>{
    document.querySelectorAll('tbody .qty').forEach(i => i.value = 0);
    sumarTotal();
  });

  // initial calc
  sumarTotal();
});
</script>
